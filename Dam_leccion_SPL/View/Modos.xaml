<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dam_leccion_SPL.View.Modos"
             Title="Modos">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
   
        <Entry 
            x:Name="txt1" 
            Placeholder="Texto 1"
           Text="Hola MAUI"/>
        <Entry 
           x:Name="txt2" 
           Placeholder="Texto 2"
          Text="{Binding Source= {x:Reference txt1}, Path=Text, Mode=OneTime} "/>
        
      
    </VerticalStackLayout>
</ContentPage>
    